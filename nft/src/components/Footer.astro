---
import Container from "./Container.astro";
---

<Container>
  <section
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 mb-20 gap-x-4 gap-y-6"
  >
    <div class="text-white">
      <a href="#" class="uppercase font-black text-lg">krypto</a>
    </div>
    <div class="text-white">
      <h5 class="mb-4 font-bold">Krypto</h5>
      <ul class="flex flex-col gap-y-3">
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Home</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >About</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Buy NFTs</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Sell NFTs</a
          >
        </li>
      </ul>
    </div>
    <div class="text-white">
      <h5 class="mb-4 font-bold">Market</h5>
      <ul class="flex flex-col gap-y-3">
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Browse NFTs</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Buy NFTs</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Sell NFTs</a
          >
        </li>
      </ul>
    </div>
    <div class="text-white">
      <h5 class="mb-4 font-bold">Contact</h5>
      <ul class="flex flex-col gap-y-3">
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Email</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Linkedin</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Instagram</a
          >
        </li>
        <li>
          <a
            href="#"
            class="transition duration-700 ease-in-out hover:text-[#AAD9D9]"
            >Twitter</a
          >
        </li>
      </ul>
    </div>
    <div>
      <h5 class="mb-4 font-bold text-white text-lg">Join Our Newsletter</h5>
      <form action="">
        <input
          type="text"
          class="bg-[#11124B] px-4 py-3 rounded-full text-white"
          placeholder="Email Address"
        />
        <button
          class="border-2 border-[#AAD9D9] py-2 px-12 uppercase rounded-full transition duration-700 hover:bg-[#8080D7] font-semibold text-white mt-5"
          >Submit</button
        >
      </form>
    </div>
  </section>
</Container>
